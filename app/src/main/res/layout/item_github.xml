<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">


    <TextView
        android:id="@+id/text_repository_description"
        style="@style/item_menu_text"
        android:layout_width="233dp"
        android:layout_height="37dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_repository"
        app:layout_constraintEnd_toEndOf="@+id/text_repository_name"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/text_repository_name"
        app:layout_constraintTop_toTopOf="@+id/imageView_repository"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/text_repository_URL"
        style="@style/item_menu_text"
        android:layout_width="230dp"
        android:layout_height="17dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_repository"
        app:layout_constraintEnd_toEndOf="@+id/text_repository_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/text_repository_name"
        app:layout_constraintTop_toTopOf="@+id/imageView_repository"
        app:layout_constraintVertical_bias="0.375" />

    <ImageView
    android:id="@+id/imageView_repository"
    style="@style/item_menu_view"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.02"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.545"
    app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/text_repository_name"
        style="@style/item_menu_text"
        android:layout_width="230dp"
        android:layout_height="17dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_repository"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toEndOf="@+id/imageView_repository"
        app:layout_constraintTop_toTopOf="@+id/imageView_repository"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>