<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="#1F0251">

    <ImageView
        android:id="@+id/dice_view"
        style="@style/dice_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.302"
        app:srcCompat="@drawable/empty_dice" />

    <Button
        android:id="@+id/button_roll_dice"
        style="@style/button_menu"
        android:layout_marginTop="36dp"
        android:text="Roll"
        app:layout_constraintEnd_toEndOf="@+id/dice_view"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/dice_view"
        app:layout_constraintTop_toBottomOf="@+id/dice_view" />

    <Button
        android:id="@+id/button_back_dice"
        style="@style/button_menu"
        android:layout_marginTop="36dp"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="@+id/button_roll_dice"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/button_roll_dice"
        app:layout_constraintTop_toBottomOf="@+id/button_roll_dice"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>